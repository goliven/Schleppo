<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.moco.schleppo.schleppo.LoginActivity">

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="30dp"
        android:id="@+id/usernameLabelView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Username"
        android:ems="10"
        android:layout_below="@+id/usernameLabelView"
        android:layout_alignLeft="@+id/usernameLabelView"
        android:layout_alignStart="@+id/usernameLabelView"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:id="@+id/usernameInputText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/passwordLabelView"
        android:layout_alignLeft="@+id/usernameInputText"
        android:layout_alignStart="@+id/usernameInputText"
        android:layout_marginTop="12dp"
        android:id="@+id/passwordInputText"
        android:text="Passwort" />

    <Button
        android:text="Anmelden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/usernameLabelView"
        android:layout_toEndOf="@+id/usernameLabelView"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/loginButton" />

    <Button
        android:text="Passwort vergessen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/registerButton"
        android:layout_alignLeft="@+id/passwordLabelView"
        android:layout_alignStart="@+id/passwordLabelView"
        android:id="@+id/forgotPasswordButton" />

    <Button
        android:text="Registrieren"
        android:layout_height="wrap_content"
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Passwort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordLabelView"
        android:layout_below="@+id/usernameInputText"
        android:layout_alignLeft="@+id/usernameLabelView"
        android:layout_alignStart="@+id/usernameLabelView"
        android:layout_marginTop="23dp" />
</RelativeLayout>
